<%- include header.ejs %>

<div class="container-fluid">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="custom-block form">
      <h1><span class="fa fa-pencil-square-o"></span> Edit Client</h1>
      <form action="/client_edit" method="post">
        
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" value="<%=client[0].name%>" required>
        </div>
        
        <div class="form-group">
          <label>Surname</label>
          <input type="text" class="form-control" name="surname" value="<%=client[0].surname%>" required>
        </div>
        
        <div class="form-group">
          <label>Birthday</label>
          <input type="date" class="form-control" name="birthday" value="<%=client[0].birthday%>" min="1900-01-01" max="2000-12-31" required>
        </div>
        
        <div class="form-group">
          <label>Address</label>
          <input type="text" class="form-control" name="address" value="<%=client[0].address%>" required>
        </div>
       
        <div class="form-group">
          <label>Phone</label>
          <input type="tel" class="form-control" name="phone" pattern="[\+]\d{12}" value="<%=client[0].phone%>" required>
        </div>
       
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" name="email" value="<%=client[0].email%>"  required>
          <input type="hidden" class="form-control" name="id" value="<%=client[0].id%>"  required>
        </div>
       
        <button type="submit" class="btn btn-warning btn-lg">Save Changes</button>
      </form>
    </div>
  </div>
</div>
