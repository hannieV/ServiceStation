<%- include header.ejs %>

<div class="custom-block">
  <a class="btn btn-success btn-lg" href="../client_edit?id=<%=client[0].id%>"> <i class="fa fa-pencil-square-o"></i>
    Edit info
  </a>
  <a class="btn btn-danger btn-lg" href="../client_delete?id=<%=client[0].id%>"> <i class="fa fa-times"></i>
    Delete client
  </a>
  <br><br>

  <div>
    <label>Name:</label>
    <%=client[0].name%></div>

  <div>
    <label>Surname:</label>
    <%=client[0].surname%></div>

  <div>
    <label>Birthday:</label>
    <%date = new Date(client[0].birthday) %>
    <%=str = date.getDate()+ '.' + date.getMonth()+'.'+ date.getFullYear() %></div>

  <div>
    <label>Address:</label>
    <%=client[0].address%></div>

  <div>
    <label>Phone:</label>
    <%=client[0].phone%></div>

  <div>
    <label>Email:</label>
    <%=client[0].email%></div>

  <br><br>
  
  <a class="btn btn-success btn-lg" href="../car_add?id=<%=client[0].id%>""><i class="fa fa-plus"></i><i class="fa fa-car"></i>
    Add new car
  </a>
  <br><br><br>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th width="50px">No</th>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>VIN</th>
        <th width="120px">Action</th>
      </tr>
    </thead>
    <tbody>
      <% if(cars.length){ 
           for(var i = 0;i < cars.length;i++) { %>
       
             <tr onclick="document.location = 'car_profile?id=<%=cars[i].id%>';">
               <td>
                 <%=(i+1)%></td>
               
               <td>
                 <%=cars[i].make%></td>
               
               <td>
                 <%=cars[i].model%></td>

               <td>
                 <%=cars[i].year%></td>
               
               <td>
                 <%=cars[i].VIN%></td>
               
               <td>
                 <a class="a-inside edit" href="../car_edit?id=<%=cars[i].id%>&client_id=<%=cars[i].client_id%>">Edit</a>
                 <a class="a-inside delete" href="../car_delete?id=<%=cars[i].id%>&client_id=<%=cars[i].client_id%>">Delete</a>
               </td>
             </tr>
      <% }
      }else{ %>
        <tr>
          <td colspan="3">No cars</td>
        </tr>
   <% } %></tbody>
  </table>
</div>

